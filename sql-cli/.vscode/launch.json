{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "attach",
            "name": "üîó Attach to Running SQL CLI",
            "program": "${workspaceFolder}/target/debug/sql-cli",
            "processName": "sql-cli",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "üî® Build Debug - SQL CLI"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "üñ•Ô∏è Debug SQL CLI (External Terminal)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=sql-cli",
                    "--package=sql-cli"
                ],
                "filter": {
                    "name": "sql-cli",
                    "kind": "bin"
                }
            },
            "args": ["data/small-customer.csv"],
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal"
            // Tip: Manually maximize the external terminal window for best TUI experience.
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug SQL CLI (API mode)",
            "cargo": {
                "args": [
                    "build",
                    "--bin=sql-cli",
                    "--package=sql-cli"
                ],
                "filter": {
                    "name": "sql-cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug SQL CLI with CSV",
            "cargo": {
                "args": [
                    "build",
                    "--bin=sql-cli",
                    "--package=sql-cli"
                ],
                "filter": {
                    "name": "sql-cli",
                    "kind": "bin"
                }
            },
            "args": ["data/small-customer.csv"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug SQL CLI with JSON",
            "cargo": {
                "args": [
                    "build",
                    "--bin=sql-cli",
                    "--package=sql-cli"
                ],
                "filter": {
                    "name": "sql-cli",
                    "kind": "bin"
                }
            },
            "args": ["data/trades.json"],
            "cwd": "${workspaceFolder}"
        },
        {
